<%= bootstrap_form_with model: @post, url: user_posts_path do |form| %>
  <div>
  
    <%= form.text_field :title, size: "70x1" %>
  </div>
  <% @post.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
      <% end %>
   </div>
  <div>
  
    <%= form.text_field :text, size: "70x10" %>
  </div>

   <% @post.errors.full_messages_for(:text).each do |message| %>
      <div><%= message %></div>
      <% end %>
   </div> 

  <%= form.submit "Create Post", class:"btn btn-primary"%>
  
<% end %>