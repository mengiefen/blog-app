<%= form_with model: @post, url: user_posts_path do |form| %>
  <div>
    <div class="field form-group w-50">
      <%= form.label :title, class:'form-label' %><br />
      <%= form.text_field :title, autofocus: true, autocomplete: "title" , class: 'form-control' %>
    </div>
    <% @post.errors.full_messages_for(:title).each do |message| %>
        <div><%= message %></div>
        <% end %>
  </div>

 <div>
    <div class="field form-group w-50">
      <%= form.label :text, class:'form-label' %><br />
      <%= form.text_area :text, autofocus: true, autocomplete: "text" , size: "70x6", class: 'form-control' %>
    </div>
    <% @post.errors.full_messages_for(:text).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <%= form.submit "Create Post", class:"btn btn-primary mt-3"%>
  
<% end %>