
<%= form_with model: @user, class:"p-3 bg-content " do |form| %>
<div class="form-row">

  <div class="form-group column-md-6">
    <label for="user_name"> Full Name</label>
    <%= form.text_field :name, size: "70x1",
                        class: "form-control", 
                        id: "user_name",
                        placeholder: "Enter full name"
                        %>
  </div>
  <% @user.errors.full_messages_for(:name).each do |message| %>
      <div class="text-danger mb-2"><%= message %></div>
      <% end %>
   </div>
  <div  class="form-group">   
    <label for="phot_url">Photo URL</label>
    <%= form.text_field :photo, size: "70x1", id: "photo_url",
                        class: "form-control",
                        placeholder: "Enter photo link" 
                        %>
  </div>

   <% @user.errors.full_messages_for(:photo).each do |message| %>  
      <div class="text-danger mb-2"><%= message %></div>
      <% end %>
   </div>

  <div  class="form-group w-60">    
    <label for="user_bio">  Biography</label>
    <%= form.text_area :bio, size:"70x10", id:"user_bio", 
                          class:"form-control",
                          placeholder:"Eneter biography"
                          %>
  </div>

   <% @user.errors.full_messages_for(:bio).each do |message| %>
      <div class="text-danger mb-2"><%= message %></div>
      <% end %>
   </div>

  </div>
    
  <%= form.submit class: "btn btn-dark w-auto mt-3" do %>
    <%if action='update'%>
        "UPDATE USER"
      <% else %>
        "CREATE USER"
      <% end %>
  <% end %>
  
<% end %>

