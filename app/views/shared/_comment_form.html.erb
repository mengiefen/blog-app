<%= bootstrap_form_with model: @comment, url: new_comment_path do |form| %>
  
  <%= form.hidden_field :author_id, value: params[:user_id] %><br>
  <%= form.hidden_field :post_id, value: params[:post_id] %><br>  
  <div>
    <%= form.text_field :text, size: "70x10" %>
  </div>

   <% @comment.errors.full_messages_for(:text).each do |message| %>
      <div><%= message %></div>
      <% end %>
   </div> 

  <%= form.submit "Comment", class:"btn btn-primary"%>
  
<% end %>