<section class="user-post-detail"> 
  <div class = "card d-flex flex-row px-5 py-2 my-2 justify-content-between align-items-center"  >
    <div card class="user-picture">
      <img class="rounded-circle border border-dark img-fluid" style="width: 150px; height:150px;" src=<%=@post.author.photo%> alt=<%=@post.author.name%> />
    </div>
    <div class="user-detail"> 
      <h2 class="user-name"><%=@post.author.name %></h2>
      <p><strong>Number of Posts: <%= @post.author.posts_counter || 0 %>      
    </div>
  </div>

    <div class="ps-3">
      <div class=" ps-3 border border-secondary p-2 my-2" >
        <h3 class="text-primary text-capitalize post-title"><%= @post.title %> </h3>
        <p class="text-dark text-capitalize fw-normal"><%= @post.text %> </p>
      </div> 
     
     
      <%= link_to "BACK", user_posts_path, class: "btn btn-secondary" %>
      <%= link_to "HOME", users_path, class: "btn btn-primary" %> 
                
          
  
    <%= render "shared/comments", comments: @post.comments %>     
  
    <%= link_to "Add Comment",  new_comment_path(user_id: @user.id, post_id: @post.id), class:"btn btn-success pe-3" %>   
    <%= link_to 'Like', new_like_path(user_id: @user.id, post_id: @post.id),method: :post, class:"btn btn-primary pe-3" %>    
    <%= link_to "Delete", user_post_path(@post, user_id: @user.id), class:"btn btn-danger", data: {
                turbo_method: :delete,
                turbo_confirm: "Are you sure?"
              } %>
</section>






