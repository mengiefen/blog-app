<section class="user">
  <%= render "shared/profile",  user: @user %>
    <%= link_to "CREATE NEW POST", new_user_post_path(@user), class:"btn btn-primary pe-3" %>      
   <%= link_to "Delete Account", user_path(@user), class:"btn btn-danger", data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %>
  <div class="card mt-2 p-3 user-bio">
  <h3>Bio</h3>
    <p class="ps-3"><%=@user.bio%></p>
  </div>

  <% @user.posts.limit(2).each do |post| %>
    <%= render "shared/post", post: post %>
  <%end %>

  <% if @user.posts.count > 2 %>
    <button type="button" class="btn btn-secondary me-3">
      See All Posts
    <button>
  <%end%>

  <%= link_to "HOME", users_path, class:"btn btn-outline-primary" %>   

</section>